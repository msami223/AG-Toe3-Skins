<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Sticker"
        android:textColor="?attr/colorOnSurface"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etStickerSearch"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Search stickers..."
        android:textColorHint="?attr/colorOnSurfaceVariant"
        android:textColor="?attr/colorOnSurface"
        android:background="@drawable/bg_search_rounded"
        android:paddingHorizontal="16dp"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:layout_marginBottom="12dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStickers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- No Results State -->
        <LinearLayout
            android:id="@+id/noResultsState"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜•"
                android:textSize="40sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvNoResultsMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No stickers found"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try a different search term"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
