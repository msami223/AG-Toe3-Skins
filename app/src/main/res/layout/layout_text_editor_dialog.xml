<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#1E1E1E"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Text"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Text Input -->
    <EditText
        android:id="@+id/etTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter text..."
        android:textColor="#FFFFFF"
        android:textColorHint="#666666"
        android:background="#2C2C2C"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Preview -->
    <TextView
        android:id="@+id/tvTextPreview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Preview"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:gravity="center"
        android:background="#2C2C2C"
        android:layout_marginBottom="16dp" />

    <!-- Text Size -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Size"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <SeekBar
            android:id="@+id/seekTextSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="28" />

        <TextView
            android:id="@+id/tvSizeValue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="48sp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="end" />

    </LinearLayout>

    <!-- Color Options -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Color"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTextColorWhite"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#666666" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTextColorBlack"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:backgroundTint="#000000"
            app:strokeColor="#666666" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTextColorRed"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:backgroundTint="#FF0000"
            app:strokeColor="#666666" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTextColorBlue"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:backgroundTint="#0000FF"
            app:strokeColor="#666666" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTextColorYellow"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:backgroundTint="#FFFF00"
            app:strokeColor="#666666" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTextColorGreen"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            app:backgroundTint="#00FF00"
            app:strokeColor="#666666" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelText"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="CANCEL"
            android:textColor="#FFFFFF"
            app:strokeColor="#666666" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="ADD TEXT"
            app:backgroundTint="#BB86FC"
            android:textColor="#000000" />

    </LinearLayout>

</LinearLayout>
